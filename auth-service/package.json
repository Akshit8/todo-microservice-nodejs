{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "authentication microservice deals with user auth and details",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "nodemon",
    "start": "node node_modules/moleculer/bin/moleculer-runner --config moleculer.config.js src/*.Service.js",
    "repl": "ts-node node_modules/moleculer/bin/moleculer-runner --hot --repl --config moleculer.config.ts src/*.Service.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n ",
    "migration:up": "npm run typeorm migration:run",
    "migration:down": "npm run typeorm migration:revert",
    "test": "jest"
  },
  "keywords": [
    "auth-microservice"
  ],
  "author": "Akshit Sadana",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/node": "^17.0.8",
    "jest": "^27.4.7",
    "moleculer-repl": "^0.7.0",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@faker-js/faker": "^6.0.0-alpha.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "moleculer": "^0.14.19",
    "moleculer-decorators": "^1.3.0",
    "nats": "^2.4.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41"
  }
}
